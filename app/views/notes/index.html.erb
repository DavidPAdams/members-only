<h1>All Messages</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <% if logged_in? && current_user.email.include?("guardians") %>
      <p>
        <%= link_to "New Message", new_note_path, class: "pull-right btn btn-success" %>
      </p>
    <% end %>
    <ul>
      <%= render @notes %>
    </ul>
  </div>
</div>
